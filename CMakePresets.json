      "cacheVariables": {
        "OPT_TRAEFIK":  "ON",
        "OPT_PROWLARR": "ON",
        "OPT_LIDARR":   "ON",
        "OPT_RADARR":   "ON",
        "OPT_SONARR":   "ON",
        "OPT_BAZARR":   "ON",
        "OPT_QBITTORRENT": "ON",
        "OPT_JELLYFIN": "ON",
        "OPT_JELLYSEERR": "ON"
      }
    }
  ]
}
