{
  "version": 7,
  "configurePresets": [
    {
      "name": "srvarr",
      "displayName": "Default Config",
      "description": "Generates docker configuration",
      "binaryDir": "${sourceDir}/build"
    },
    {
      "name": "openrc",
      "displayName": "Add OpenRC scripts",
      "description": "Generates openrc scripts",
      "inherits": "srvarr",
      "cacheVariables": {
        "OPENRC": "ON"
      }
    },
    {
      "name": "all",
      "displayName": "All options to ON",
      "description": "Generates everythings everywhere",
      "inherits": "srvarr",
      "cacheVariables": {
        "OPENRC": "ON",
        "NGINX": "ON",
        "MYMPD": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "start",
      "configurePreset": "all",
      "targets": [ "start"]
    },
    {
      "name": "startd",
      "configurePreset": "all",
      "targets": [ "startd"]
    },
    {
      "name": "stop",
      "configurePreset": "all",
      "targets": [ "stop"]
    }
  ]
}
