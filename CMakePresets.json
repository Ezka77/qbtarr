{
  "version": 7,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "displayName": "base config",
      "description": "define the binaryDir",
      "binaryDir": "${sourceDir}/build"
    },
    {
      "name": "default",
      "displayName": "servarr, qbittorrent and traefik",
