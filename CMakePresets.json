{
  "version": 7,
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Config",
      "description": "Generates docker configuration",
      "binaryDir": "${sourceDir}/build"
    },
    {
      "name": "openrc",
      "displayName": "Add OpenRC scripts",
      "description": "Generates openrc scripts",
      "inherits": "default",
      "cacheVariables": {
        "OPENRC": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "start",
      "configurePreset": "openrc",
      "targets": [ "start"]
    },
    {
      "name": "startd",
      "configurePreset": "openrc",
      "targets": [ "startd"]
    },
    {
      "name": "stop",
      "configurePreset": "openrc",
      "targets": [ "stop"]
    }
  ]
}
